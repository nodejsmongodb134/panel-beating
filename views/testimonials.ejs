<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="/css/styles.css">
    <title>Testimonials</title>
</head>
<body>

    <%- include('./layouts/header') %>

    <h1>Testimonials</h1>
    <!--<a href="/testimonials/upload">Upload New Testimonial</a> -->
    <div>
        <% testimonials.forEach(testimonial => { %>
            <div>
                <h2><%= testimonial.description %></h2>
                <p>Before:</p>
                <img src="/uploads/<%= testimonial.beforeImage %>" alt="Before Image">
                <p>After:</p>
                <img src="/uploads/<%= testimonial.afterImage %>" alt="After Image">
            </div>
        <% }) %>
    </div>

     <!-- views/partials/footer.ejs -->
     <%- include('./layouts/footer') %>
    
</body>
</html>
